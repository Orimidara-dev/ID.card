    let studentsCard = 0



    function displayCard() {
        document.getElementById('name').innerHTML = idCard[studentsCard].name
        document.getElementById('image').src = idCard[studentsCard].img
        document.getElementById('course').innerHTML = idCard[studentsCard].course
        document.getElementById('ID').innerHTML = idCard[studentsCard].ID
    }


    displayCard()

    function next() {
        studentsCard = (studentsCard === idCard.length - 1) ? 0 : studentsCard + 1
        displayCard()
    }

    function prev() {
        studentsCard = (studentsCard === 0) ? idCard.length -1 : studentsCard -1;
        displayCard()
    }
